{
  "name": "evolution-gadget-backend",
  "version": "1.0.0",
  "description": "Backend API for Evolution Gadget e-commerce platform",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "create-admin": "ts-node -r tsconfig-paths/register src/scripts/createAdmin.ts",
    "verify-admin": "ts-node -r tsconfig-paths/register src/scripts/verifyAdmin.ts",
    "update-admin": "ts-node -r tsconfig-paths/register src/scripts/updateAdminEmail.ts",
    "test-login": "ts-node -r tsconfig-paths/register src/scripts/testLogin.ts",
    "fix-admin": "ts-node -r tsconfig-paths/register src/scripts/fixAdmin.ts"
  },
  "keywords": [
    "ecommerce",
    "gadgets",
    "api",
    "typescript",
    "mongodb"
  ],
  "author": "Evolution Gadget Team",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.25",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.8",
    "@types/node": "^20.8.6",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
